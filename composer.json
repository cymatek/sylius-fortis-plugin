{
  "name": "cymatek/sylius-fortis-plugin",
  "type": "symfony-bundle",
  "description": "Sylius 2 Payum gateway for Fortis (SDK-integrated).",
  "license": "proprietary",
  "scripts": {
    "test": "phpunit --testsuite Unit",
    "test:unit": "phpunit --testsuite Unit",
    "test:int": "phpunit --testsuite Integration",
    "test:all": "phpunit"
  },
  "require": {
    "php": ">=8.1",
    "payum/payum-bundle": "^2.6",
    "php-http/guzzle7-adapter": "^1.0",
    "guzzlehttp/guzzle": "^7.8",
    "php-http/discovery": "^1.19"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "symfony/dotenv": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Vendor\\FortisPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vendor\\FortisPlugin\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "packages/fortisapi",
      "options": { "symlink": false }
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "extra": {
    "symfony": { "allow-contrib": true }
  }
}
